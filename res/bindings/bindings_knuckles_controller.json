{
   "bindings" : {
      "/actions/wm" : {
         "poses" : [
            {
               "output" : "/actions/wm/in/hand_primary",
               "path" : "/user/hand/right/pose/raw"
            },
            {
               "output" : "/actions/wm/in/hand_secondary",
               "path" : "/user/hand/left/pose/raw"
            }
         ],
         "haptics" : [
            {
               "output" : "/actions/wm/out/haptic_primary",
               "path" : "/user/hand/right/output/haptic"
            },
            {
               "output" : "/actions/wm/out/haptic_secondary",
               "path" : "/user/hand/left/output/haptic"
            }
         ],
         "sources" : [
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/wm/in/grab_window"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/trigger"
            },
            {
               "inputs" : {
                  "scroll" : {
                     "output" : "/actions/wm/in/push_pull"
                  }
               },
               "mode" : "trackpad_scroll",
               "path" : "/user/hand/right/input/trackpad"
            }
         ]
      },
      "/actions/mouse_synth" : {
         "sources" : [
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/mouse_synth/in/left_click"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/a"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/mouse_synth/in/right_click"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/b"
            },
            {
               "inputs" : {
                  "scroll" : {
                     "output" : "/actions/mouse_synth/in/scroll"
                  }
               },
               "mode" : "trackpad_scroll",
               "path" : "/user/hand/right/input/trackpad"
            }
         ]
      }
   },
   "controller_type" : "knuckles",
   "description" : "GNOME VR bindings for the Knuckles Controller",
   "name" : "GNOME VR Knuckles Controller"
}
